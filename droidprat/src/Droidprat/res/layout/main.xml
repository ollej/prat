<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:dp="http://schemas.android.com/apk/res/com.jxdevelopment.droidprat"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
    	android:layout_gravity="top"
    	android:background="@color/bgcolor_title"
	   >
	   
<!--
 		<com.jxdevelopment.droidprat.TextViewFont
	        dp:ttf_name="DroidSansPro.ttf"
-->
		<TextView
			android:text="@string/app_name" android:textSize="24sp" android:id="@+id/title" android:gravity="center_vertical|left" android:textStyle="bold" android:layout_gravity="left" android:textColor="@color/fgcolor_title" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="5sp" android:layout_weight="100" />
		<ImageView android:src="@drawable/info" android:clickable="true" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/prefButton" android:layout_gravity="right" android:layout_weight="1" android:focusable="true"></ImageView>
	</LinearLayout>
    <ListView
    	android:id="@+id/lvMessages"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:stackFromBottom="true"
    	android:smoothScrollbar="true"
    	android:fadeScrollbars="true"
    	android:layout_weight="100"
    	android:isScrollContainer="true"
    	></ListView>
    <EditText
    	android:id="@+id/etMessage"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_gravity="bottom"
    	android:textSize="16sp"
    	android:hint="@string/enter_msg"
    	></EditText>   
</LinearLayout>
